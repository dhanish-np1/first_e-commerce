<%- include('../partials/adminheadder') %>


<div class="content-wrapper">
    <div class="page-header">

        <h2>fgf</h2>
    </div>
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Products</h4>
                    <a href="/admin/addproducts"><button style=" border-radius: 10%; background-color: green; border: 0cap;">Add product</button></a>
                    
                    </p>
                    <div class="table-responsive">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th> No </th>
                                    <th> name </th>
                                    <th> Image </th>
                                    <th> catogery </th>
                                    <th> stock </th>
                                    <th> price</th>
                                    <th> status</th>
                                    <th> action</th>
                                    <th> edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <% if (products.length>0) { %>
                                        <% for (let i = 0; i < products.length; i++) { %>
                                            <tr>
                                                <td><%= i+1 %></td>
                                                <td><%=products[i].name%></td>
                                                <td><img src="/products/crop/<%=products[i].images.image1%>" alt=""></td>
                                                <td><%=products[i].category%></td>
                                                <td><%=products[i].quantity%></td>
                                                <td><%=products[i].price%></td>
                                                <td>
                                                    <% if (products[i].blocked === 0) { %>
                                                       <p style="color: green;">active</p>
                                                      <% } else { %>
                                                        <p style="color: red;">blocked</p>
                                                      <% } %>
                                                </td>
                                                <td>
                                                    <% if (products[i].blocked === 0) { %>
                                                        <a href="/admin/blockproduct?id=<%= products[i]._id %>"
                                                            class="badge badge-danger">block</a>
                                                      <% } else { %>
                                                        <a href="/admin/unblockproduct?id=<%= products[i]._id %>"
                                                            class="badge badge-success">unblock</a>
                                                      <% } %>
                                                </td>
                                                <td><a href="/admin/loadeditproduct?id=<%= products[i]._id %>"
                                                    class="badge badge-primary">edit</a></td>
                                            </tr>
                                          <% } %>
                                        
                                      <% } else { %>
                                        
                                        <tr>
                                            <td colspan="9" style="text-align: center;">Product not found</td>
                                        </tr>
                                      <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>




    </div>


</div>

