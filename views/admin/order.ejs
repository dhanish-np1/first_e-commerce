<%- include('../partials/adminheadder') %>

    <div class="content-wrapper">
        <div class="page-header">

            <h2>fgf</h2>
        </div>
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Orders</h4>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped table-dark">
                                <thead>
                                    <tr>
                                        <th> No </th>
                                        <th> Order Id </th>
                                        <th> Oreder Date </th>
                                        <th> Payment </th>
                                        <th> status </th>
                                        <th> view</th>
                                        <th> Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (orders.length>0) { %>
                                        <% for (let i=0; i < orders.length; i++) { %>
                                            <tr>
                                                <td>
                                                    <%=i+1%>
                                                </td>
                                                <td>
                                                    <%=orders[i].uniqueId%>
                                                </td>
                                                <td>
                                                    <%= typeof orders[i].deliveryDate==='string' ?
                                                        orders[i].deliveryDate.slice(0, 10) :
                                                        orders[i].deliveryDate.toISOString().slice(0, 10) %>
                                                </td>
                                                <td>
                                                    <%=orders[i].totalAmount%>
                                                </td>
                                                <td>
                                                    <%=orders[i].status%>
                                                </td>
                                                <td><button style="border-radius: 10px;" type="button"
                                                        class="btn btn-primary">view</button></td>
                                                <td>
                                                    <% if (2==1) { %>

                                                        <% } else { %>
                                                            <div class="dropdown" >
                                                                <button class="btn btn-primary dropdown-toggle"
                                                                    type="button" id="dropdownMenu2"
                                                                    data-toggle="dropdown" aria-haspopup="true"
                                                                    aria-expanded="false">
                                                                    Action
                                                                </button>
                                                                <div class="dropdown-menu "
                                                                    aria-labelledby="dropdownMenu2">
                                                                    <button class="dropdown-item " style="color: white;" 
                                                                        type="button">Delivered</button>
                                                                    <button class="dropdown-item" type="button" style="color: white;">
                                                                        Shipped</button>
                                                                    <button class="dropdown-item" style="color: white;"
                                                                        type="button">Cancelled</button>
                                                                </div>
                                                            </div>
                                                            <% } %>
                                                </td>
                                            </tr>
                                            <% } %>

                                                <% } else { %>

                                                    <tr>
                                                        <td colspan="9" style="text-align: center;">Product not found
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>


    </div>


    <%- include('../partials/adminfooter') %>