<%- include('../partials/adminheadder') %>

<div class="content-wrapper">
    <div class="page-header">

        <h2>fgf</h2>
    </div>
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Products</h4>
                    <a href="/admin/addproducts"><button style=" border-radius: 10%; background-color: green; border: 0cap;">Add product</button></a>
                    
                    </p>
                    <div class="table-responsive">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th> No </th>
                                    <th> Order Id </th>
                                    <th> Oreder Date </th>
                                    <th> Payment </th>
                                    <th> status </th>
                                    <th> view</th>
                                    <th> Action</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                    <% if (products.length>0) { %>
                                        <% for (let i = 0; i < products.length; i++) { %>
                                            <tr>
                                                <td><%= i+1 %></td>
                                                <td><%=products[i].name%></td>
                                                <td><img src="/products/crop/<%=products[i].images.image1%>" alt=""></td>
                                                <td><%=products[i].category%></td>
                                                <td><%=products[i].quantity%></td>
                                                <td><%=products[i].price%></td>
                                                <td>
                                                    <% if (products[i].blocked === 0) { %>
                                                        <p id="status<%=products[i]._id%>" style="color: green">active</p>
                                                      <% } else { %>
                                                        <p id="status<%=products[i]._id%>" style="color: red">blocked</p>
                                                      <% } %>
                                                </td>
                                                
                                                    <% if (products[i].blocked === 0) { %>
                                                        <td>
                                                            <button style="background-color: red;" type="button" id="block<%=products[i]._id%>"  onclick="blockProduct('<%=products[i]._id%>')" class="btn btn-danger">Block</button>
                                                          </td>
                                                          <% } else { %>
                                                          <td>
                                                            <button style="background-color: green;" type="button" id="block<%=products[i]._id%>" onclick="blockProduct('<%=products[i]._id%>')" class="btn btn-success">unblock</button>
                                                          </td>
                                                      <% } %>
                                                
                                                <td><a href="/admin/loadeditproduct?id=<%= products[i]._id %>"
                                                    class="badge badge-primary">edit</a></td>
                                            </tr>
                                          <% } %>
                                        
                                      <% } else { %>
                                        
                                        <tr>
                                            <td colspan="9" style="text-align: center;">Product not found</td>
                                        </tr>
                                      <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>




    </div>


</div>

<%- include('../partials/adminfooter') %>