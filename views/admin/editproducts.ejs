<%- include('../partials/adminheadder') %>
    <style>
        .rounded-image-preview {
            max-width: 200px;
            /* Set your maximum width here */
            max-height: 200px;
            /* Set your maximum height here */
            overflow: hidden;
            /* Hide any overflow beyond the specified dimensions */
        }

        .rounded-image-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            /* Maintain aspect ratio while covering the container */
        }
    </style>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="col-12 grid-margin stretch-card">
                <div class="card" style="color: white;">
                    <div class="card-body">
                        <h4 class="card-title">Add Products</h4>
                        <p class="card-description">Give product details</p>
                        <form class="forms-sample" id="addPro" action="/admin/addProducts" method="post"
                            enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputName1">Product Name</label>
                                <input value="<%=products.name%>" type="text" class="form-control" id="name" name="name" placeholder="Name">
                                <p id="nameError" style="color: red; display: none;"></p>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail3">Product Price</label>
                                <input value="<%=products.price%> type="number" class="form-control" id="price" name="price" placeholder="Price">
                                <p id="priceError" style="color: red; display: none;"></p>
                            </div>


                            <div class="form-group">
                                <label for="Category">Category</label>
                                <select name="category" id="categorySelect">
                                    <% for (let i = 0; i < category.length; i++) { %>
                                        <option><%=category.name%></option>
                                      <% } %>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword4">Quantity</label>
                                <input value="<%=products.quantity%> type="number" class="form-control" id="quantity" name="quantity"
                                    placeholder="Quantity">
                                <p id="quanError" style="color: red; display: none;"></p>
                            </div>
                            <div class="form-group">
                                <label for="exampleTextarea1">Description</label>
                                <br>
                                <textarea  id="description" name="description" rows="8" required style="background-color: #2A3038 ; border: 0cap ;width: 100%; color: white;"><%=products.description%></textarea>
                                <p id="descError" style="color: red; display: none;"></p>
                            </div>
                            <label for="exampleTextarea1">Product Images</label>
                            <div style="display: flex;">
                                <div class="col-lg-3 col-md-6 rounded-image-preview">
                                    <label for="imageInput1" class="image-label">
                                        <div class="rounded-image-preview">
                                            <img id="imagePreview1"
                                                src="/products/crop/<%=products.images.image1%>"
                                                alt="Preview" />
                                        </div>
                                        <input name="image1" type="file" accept="image/*" id="imageInput1"
                                            class="imageInput"  required>
                                    </label>
                                </div>
                                <div class="col-lg-3 col-md-6 rounded-image-preview">
                                    <label for="imageInput2" class="image-label">
                                        <div class="rounded-image-preview">
                                            <img id="imagePreview2"
                                                src="/products/crop/<%=products.images.image2%>"
                                                alt="Preview" />
                                        </div>
                                        <input name="image2" type="file" accept="image/*" id="imageInput2"
                                            class="imageInput"  required>
                                    </label>
                                </div>
                                <div class="col-lg-3 col-md-6 rounded-image-preview">
                                    <label for="imageInput3" class="image-label">
                                        <div class="rounded-image-preview">
                                            <img id="imagePreview3"
                                                src="/products/crop/<%=products.images.image3%>"
                                                alt="Preview" />
                                        </div>
                                        <input name="image3" type="file" accept="image/*" id="imageInput3"
                                            class="imageInput"  required>
                                    </label>
                                </div>
                                <div class="col-lg-3 col-md-6 rounded-image-preview">
                                    <label for="imageInput4" class="image-label">
                                        <div class="rounded-image-preview">
                                            <img id="imagePreview4"
                                                src="/products/crop/<%=products.images.image4%>"
                                                alt="Preview" />
                                        </div>
                                        <input name="image4" type="file" accept="image/*" id="imageInput4"
                                            class="imageInput"  required>
                                    </label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <button class="btn btn-inverse-danger"
                                onclick="window.location.href='/admin/product'">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add this script to include jQuery before your custom script -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script>
        $(document).ready(function () {
            // Function to handle image preview
            function updateImagePreview(inputElement, imagePreviewId) {
                var imagePreview = $("#" + imagePreviewId)[0];
                var file = inputElement.files[0];

                if (file) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        imagePreview.src = e.target.result;
                    };

                    reader.readAsDataURL(file);
                } else {
                    // Reset the image preview when no file is selected
                    imagePreview.src = "/admin/assets/images/preview.jpg";
                }
            }

            // Event handler for image input change
            $(".imageInput").change(function () {
                var input = this;
                var imagePreviewId = $(input).siblings('.rounded-image-preview').children('img').attr('id');
                updateImagePreview(input, imagePreviewId);
            });
        });
    </script>

