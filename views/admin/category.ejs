<%- include('../partials/adminheadder') %>

  <div class="content-wrapper">
    <div class="page-header">
      <h2>fgf</h2>
    </div>
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h2 style="text-align: center; color: azure">Category</h2>
            <!-- bootstrap moddal -->
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
              Add new
            </button>

            <!-- Modal -->

            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
              aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div style="background-color: rgb(70, 63, 63)" class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle" style="color: aliceblue">
                      Add new category
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form id="addCategory">
                      <label for="category" style="color: aliceblue">name</label>
                      <br />
                      <input type="text" name="newcategory" style="border-radius: 3%" />
                      <p id="error-message" style="color: red"></p>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                          Close
                        </button>
                        <button type="button" onclick="addCategory()" class="btn btn-primary">
                          Add
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search"
              style="border-radius: 7px; margin-left: 5px; padding-left: 5px" />
            <h2></h2>
            <div class="table-responsive">
              <table class="table table-striped table-dark" id="myTable">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Category</th>
                    <th>status</th>
                    <th>action</th>
                    <th>offer</th>
                    <th>offer action</th>
                    <th>update</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (cats.length>0) { %> <% for (let i=0; i < cats.length; i++) { %>
                      <tr>
                        <td>
                          <%= i+1 %>
                        </td>
                        <td>
                          <%= cats[i].name %>
                        </td>

                        <% if (cats[i].blocked!==1) { %>
                          <td>
                            <p id="status<%=cats[i]._id%>" style="color: green">
                              active
                            </p>
                          </td>
                          <% } else { %>
                            <td>
                              <p id="status<%=cats[i]._id%>" style="color: red">
                                blocked
                              </p>
                            </td>
                            <% } %>
                              <% if (cats[i].blocked===0) { %>
                                <td>
                                  <button style="background-color: red" type="button" id="block<%=cats[i]._id%>"
                                    onclick="blockCat('<%=cats[i]._id%>')" class="btn btn-danger">
                                    Block
                                  </button>
                                </td>
                                <% } else { %>
                                  <td>
                                    <button style="background-color: green" type="button" id="block<%=cats[i]._id%>"
                                      onclick="blockCat('<%=cats[i]._id%>')" class="btn btn-success">
                                      unblock
                                    </button>
                                  </td>
                                  <% } %>
                                    <!-- offer -->
                                    <td>
                                      <% if (cats[i].offer==null) { %> 0% <% } else { %>
                                          <%=cats[i].offer.percentages%>% <% } %>
                                    </td>
                                    <td>
                                      <% if (cats[i].offer==null) { %>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-primary" data-toggle="modal"
                                          data-target="#offer<%=cats[i]._id%>">
                                          add offer
                                        </button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="offer<%=cats[i]._id%>" tabindex="-1" role="dialog"
                                          aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                          <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                              <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">add catogery offer</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                  aria-label="Close">
                                                  <span aria-hidden="true">&times;</span>
                                                </button>
                                              </div>
                                              <div class="modal-body">
                                                <form action="categery-Offer" method="post" id="addOffer<%=cats[i]._id%>" >
                                                  <% for (let i = 0; i < offer.length; i++) { %>
                                                    <div class="form-check">
                                                      <input
                                                        class="form-check-input"
                                                        type="radio"
                                                        name="offerId"
                                                        value="<%=offer[i]._id%>"
                                                        id="flexRadioDefault1<%=i%>"
                                                      />
                                                     
                                                      <label style="color: white;" class="form-check-label" for="flexRadioDefault1<%=i%>">
                                                        <%=offer[i].name%> = <%=offer[i].percentages%>%
                                                      </label>
                                                    </div>
                                                    <% } %>
                                                    <input type="hidden" name="categeryId" value="<%=cats[i]._id%>">
                                                </form>
                                              </div>
                                              <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                  data-dismiss="modal">Close</button>
                                                <button type="button" class="btn btn-primary" onclick="submitModal('<%=cats[i]._id%>')">Add offer</button>
                                              </div>
                                            </div>
                                          </div>
                                        </div>
                                        <% } else { %>
                                          <button type="button" class="btn btn-danger" onclick="removeOffer('<%=cats[i]._id%>','<%=cats[i].name%>')">remove</button>
                                          <% } %>

                                    </td>
                                    <td>
                                      <!-- Button trigger modal -->
                                      <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#exampleModal<%=cats[i]._id%>">
                                        Edit
                                      </button>

                                      <!-- Modal -->
                                      <div class="modal fade" id="exampleModal<%=cats[i]._id%>" tabindex="-1"
                                        role="dialog" aria-labelledby="exampleModal<%=cats[i]._id%>" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                          <div class="modal-content" style="background-color: rgb(70, 63, 63)">
                                            <div class="modal-header">
                                              <h5 class="modal-title" id="exampleModalLabel">
                                                give new name
                                              </h5>
                                              <button type="button" class="close" data-dismiss="modal"
                                                aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                              </button>
                                            </div>
                                            <div class="modal-body">
                                              <form id="editcat<%= cats[i]._id %>">
                                                <label for="catogery" style="color: white">Enter new name</label>

                                                <input type="hidden" name="_id" value="<%= cats[i]._id %>" />
                                                <input type="text" name="newname"
                                                  style="height: 30px; border-radius: 10" />
                                                <p id="error-message2<%= cats[i]._id %>" style="color: red"></p>
                                                <br />
                                                <h1></h1>
                                                <button type="button" onclick="editCategory('<%= cats[i]._id %>')"
                                                  class="btn btn-primary">
                                                  Submit
                                                </button>
                                              </form>
                                            </div>
                                          </div>
                                        </div>
                                      </div>
                                    </td>
                      </tr>

                      <% } %>
                        <% } else { %>

                          <tr>
                            <td colspan="7" style="text-align: center">
                              categery not found
                            </td>
                          </tr>
                          <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div style="display: flex; justify-content: center;">
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
