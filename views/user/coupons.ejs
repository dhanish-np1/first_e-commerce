<style>
.coupon {
  background-color: #f5f5f5;
  border: 2px solid #000;
  border-radius: 25px;
  padding: 40px;
  width: 300px;
  text-align: center;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
}

.title {
  color: #000;
  font-size: 1.5em;
  margin-bottom: 15px;
}

.details {
  text-align: left;
  margin-top: 20px;
}

.details p {
  margin: 8px 0;
  font-size: 1em; /* Adjusted size */
  color: #333;
}

.discount {
  font-size: 2em; /* Adjusted size */
  font-weight: bold;
  color: #ff5722;
}

.code {
  font-weight: bold;
  color: #e91e63;
}


</style>
<div
  style="
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    padding-top: 100px;
    padding-bottom: 100px;
    justify-content: center;
    padding-left: 30px;
    padding-right: 30px;
  "
>
  <% for(let i=0; i < coupon.length; i++) { %>
    <div class="coupon">
        <h3 class="title">ðŸŽ‰ Special Offer! ðŸŽ‰</h3>
        <div class="details">
          <p style="color: black;"><strong>Name:</strong> <%=coupon[i].couponName%></p>
          <p style="color: black;"><strong>Code:</strong> <span class="code"><%=coupon[i].couponCode%></span></p>
          <p style="color: black;"><strong>Discount:</strong> <span class="discount"> &#8377;<%=coupon[i].discountAmount%> Rs</span></p>
          <p style="color: black;"><strong>Criteria:</strong> Minimum purchase of &#8377;<%=coupon[i].criteriaAmount%></p>
          <p style="color: black;"><strong>Expiry Date:</strong> <%= String(coupon[i].expiryDate).slice(0,15) %></p>
        </div>
      </div>
  <% } %>
</div>
