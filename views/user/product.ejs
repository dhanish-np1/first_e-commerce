<!-- Product -->
<div class="bg0 m-t-23 p-b-140">
  <div class="container">
    <div class="flex-w flex-sb-m p-b-52">
      <div class="flex-w flex-l-m filter-tope-group m-tb-10">
        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
          All Products
        </button>

        <% for (let i = 0; i < 4; i++) { %>
          <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".<%=categery[i].name%>">
            <%=categery[i].name%>
          </button>
        <% } %>
      </div>

      <div class="flex-w flex-c-m m-tb-10">
        <div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
          <i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
          <i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
          Filter
        </div>

        
      </div>

      <!-- Search product -->
      <div class="dis-none panel-search w-full p-t-10 p-b-15">
        <div class="bor8 dis-flex p-l-15">
          <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
            <i class="zmdi zmdi-search"></i>
          </button>

          <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product" placeholder="Search" />
        </div>
      </div>

      <!-- Filter -->
      <div class="dis-none panel-filter w-full p-t-10">
        <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
          <div class="filter-col1 p-r-15 p-b-27 filter-tope-group">
            <div class="mtext-102 cl2 p-b-15">Sort By</div>

            <ul>
              <li class="p-b-6">
                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter="*">
                  All
                </button>
              </li>
              <% for (let i = 0; i < 4; i++) { %>
                <li class="p-b-6">
                  <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".<%=categery[i].name%>">
                    <%=categery[i].name%>
                  </button>
                </li>
              <% } %>
              

              
            </ul>
          </div>

          <!-- <div class="filter-col2 p-r-15 p-b-27">
            <div class="mtext-102 cl2 p-b-15">Price</div>

            <ul >
             
              <li class="p-b-4" style="margin-right: 45px;">
                <a href="/shop" class="filter-link stext-106 trans-04">
                  $ high to low
                </a>
              </li>
              <li class="p-b-4" style="margin-right: 45px;">
                <a href="/shop" class="filter-link stext-106 trans-04">
                  $ low to high
                </a>
              </li>
            </ul>
          </div> -->
        </div>
      </div>
    </div>

    <div class="row isotope-grid">
      <% for(let i=0; i < products.length; i++) { %>
        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item <%=products[i].category%>">
          <!-- Block2 -->
          <div class="block2">
            <div class="block2-pic hov-img0">
              <%if(products[i].offer!==null){%>
                <span style=" background-color: #ff0000;  position: absolute;color:white; padding: 2px;">
                  <%=products[i].offer.percentages%> %OFF
                </span>
                <%}%>
                  <a href="/product-detail?id=<%= products[i]._id %>"><img
                      src="products/images/<%=products[i].images.image1%>" alt="IMG-PRODUCT" /></a>
            </div>

            <div class="block2-txt flex-w flex-t p-t-14">
              <div class="block2-txt-child1 flex-col-l">
                <a style="color: black;" href="/product-detail?id=<%= products[i]._id %>"
                  class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                  <%=products[i].name%>
                </a>
                <%if(products[i].offer!==null){%>
                  <div><span style="color: rgb(240, 0, 0); text-decoration: line-through;" class="stext-105 cl3">
                    &#8377; <%=products[i].price%>
                  </span> &nbsp;<span style="color: black;" class="stext-105 cl3">
                    <%=Math.round(products[i].discount)%>
                  </span></div>

                  <%}else{%>
                    <span style="color: black;" class="stext-105 cl3">
                      &#8377;<%=products[i].price%>
                    </span>
                    <%}%>

                      <% if (products[i].quantity<=5 && products[i].quantity>0) { %>
                        <p class="stext-105 cl3" style="color: red">only <%=products[i].quantity%> stock left</p>
                        <% } else if(products[i].quantity==0) { %>
                          <p class="stext-105 cl3" style="color: red">Out of stock!</p>
                          <% } %>
              </div>

              <div class="block2-txt-child2 flex-r p-t-3">
                <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                  <img class="icon-heart1 dis-block trans-04" src="user/images/icons/icon-heart-01.png" alt="ICON" />
                  <img class="icon-heart2 dis-block trans-04 ab-t-l" src="user/images/icons/icon-heart-02.png"
                    alt="ICON" />
                </a>
              </div>
            </div>
          </div>
        </div>
        <% } %>
    </div>

    <!-- Load more -->
    <div class="flex-c-m flex-w w-full p-t-45">
      <a href="#" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
        Load More
      </a>
    </div>
  </div>
</div>

<!-- Back to top -->
<div class="btn-back-to-top" id="myBtn">
  <span class="symbol-btn-back-to-top">
    <i class="zmdi zmdi-chevron-up"></i>
  </span>
</div>